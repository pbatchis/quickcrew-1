rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    match /boards/{boardId} {
      allow read:  if true;
    }

    match /boards/{boardId}/tasks/{taskId} {
      allow read:  if true;

      // Look up the parent board once and compare its ownerUid
      allow write: if request.auth != null &&
        get(/databases/$(db)/documents/boards/$(boardId)).data.ownerUid
          == request.auth.uid;
    }
  }
}