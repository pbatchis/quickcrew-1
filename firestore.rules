rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    match /boards/{boardId} {
      allow read:  if true;

      // CREATE: use the data being written
      allow create: if request.auth.uid == request.resource.data.ownerUid;

      // UPDATE / DELETE: use the existing document
      allow update, delete: if request.auth.uid == resource.data.ownerUid;
    }

    match /boards/{boardId}/tasks/{taskId} {
      allow read:  if true;

      // Look up the parent board once and compare its ownerUid
      allow write: if request.auth != null &&
        get(/databases/$(db)/documents/boards/$(boardId)).data.ownerUid
          == request.auth.uid;
    }
  }
}